<div class="col-md-8 offset-md-1">
      <h2>投稿料理一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @cooks.each do |cook| %>
              <tr>
                <td>
                    <%= link_to user_path(cook.user_id) do %>
                      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
                    <% end %>
                </td>
                <td>
                    <%= link_to cook.title, "/cooks/#{cook.id}" %>
                </td>
                
              <% end %>
        </tbody>
      </table>
  </div>