<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="text-center pt-5"><strong>ユーザー情報編集</strong></h2>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">名前（必須）</label>
        <%= f.text_field :name, class:"form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_image">プロフィール画像</label>
        <%= f.attachment_field :profile_image, class:"image_form" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">自己紹介（100文字以内）</label>
        <%= f.text_field :introduction, class:"form-control introdaction" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit '更新', class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>