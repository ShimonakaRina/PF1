<div class="container mt-5">
    <h2 class="bg-light text-center headtext">新着ランキング</h2>
    <%= form_with url: tag_search_path, method: :get do %>
      <%= select_tag :tag_id,
        options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
      {
        prompt: 'タグで絞り込み',
        onchange: 'submit(this.form);'
      }%>
    <% end %>
<p class="mt-3">いいねランキングは<%= link_to "こちら", rank_path,class: "btn btn-sm btn-outline-secondary" %></p>
    <table class="table table-hover table-inverse mt-5">
      <thead>
        <tr>
          <th>完成写真</th>
          <th>タイトル</th>
          <th>タグ</th>
          <th></th>
          <th></th>
          <th>評価(平均)</th>
        </tr>
      </thead>
      <tbody>
        <% @cooks.each do |cook| %>
          <tr>
            <th>
              <%= link_to cook_path(cook.id) do %>
                <%= attachment_image_tag cook, :cook_image, format: 'png', fallback: "noimage.png",size: "200x200" %>
              <% end %>
            <th>
              <%= link_to cook.title, "/cooks/#{cook.id}" %>
            </th>
            <th>
              <% cook.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </th>
            <td id="favorite_buttons_<%= cook.id %>">
            <%= render "favorites/favorites", cook: cook %>
            </td>
            <td>コメント数: <%= cook.cook_comments.count %></td>
            <% if @rate[cook.id] %>
            <td><%= @rate[cook.id].round(1) %></td>
            <% else %>
            <td>評価なし</td>
            <% end %>
          <% end %>
      </tbody>
  </table>
  <%= paginate @cooks %>
</div>