<div class="container mt-5">
  <h3 class="text-center">通知一覧</h3>
  <%= link_to notifications_path, method: :delete do %>
    <i class="ml-5 fas fa-trash" style="color: black;"></i>
    <h7 style="color: black;">全削除</h7>
  <% end %>
  <hr>

  <% if @notifications.exists? %>
    <div class="ml-5">
      <%= render @notifications %>
    </div>
  <% else %>
    <p>通知はありません</p>
  <% end %>
</div>